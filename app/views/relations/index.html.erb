<h1>Listing relations</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Code</th>
    <th>Name</th>
    <th>RelationType</th>
    <th>Description</th>
  </tr>

<% @relations.each do |relation| %>
  <tr>
    <td><%=h relation.id %></td>
    <td><%=h relation.code %></td>
    <td><%=h relation.name %></td>
    <td><%=h relation.relation_type %></td>
    <td><%=h relation.description %></td>
    <td><%= link_to 'Show', relation %></td>
    <td><%= link_to 'Edit', edit_relation_path(relation) %></td>
    <td><%= link_to 'Destroy', relation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

